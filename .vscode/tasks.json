{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build App",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--debug"
			],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$flutter"
			]
		},
		{
			"label": "Build Release APK",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--release"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}